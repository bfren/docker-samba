#!/command/with-contenv sh

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Load shares configuration.
#======================================================================================================================

source ${BF_INC}/samba-load-conf.sh


#======================================================================================================================
# Generate Samba config file.
#======================================================================================================================

bf-esh \
    ${BF_TEMPLATES}\smb.conf.esh
    ${SAMBA_CONF}
